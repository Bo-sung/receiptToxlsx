<Window x:Name="Loading" x:Class="MailMaker.LoadingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailMaker"
        mc:Ignorable="d"
        Title="LoadingScreen" Width="300" Height="100">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="LOADING" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Stretch"/>
            <Label Grid.Row="1" Content="Do not Close This Window" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <ProgressBar Height="10" VerticalAlignment="Top" Width="300" Margin="0,75,0,0" IsIndeterminate="True"/>
    </Grid>
</Window>
